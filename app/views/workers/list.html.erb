<%@page_title = "Список Рабочих"%>

<%#=render :partial => 'search',:role_id => 2%>

<h5><%=image_tag('users/add.png',:alt => 'Добавить студента')%><%= link_to 'Добавить рабочего',:controller => 'workers',:action => 'new',:role_id => 2%></h5>
<hr/>


<table>
	<tr>		
		<th>Ф.И.О</th>
		<th>Электронная почта</th>		
		<th>Действия</th>
	</tr>
		<% @users.each do |user|%>			
	<tr>		
		<td><%=user.surname + " "+ user.name%></td>			
		<td><%=user.email%></td>		
		<td>			
			<%=link_to image_tag('users/edit.png',:title => 'Редактировать'),{:action => 'edit',:id => user.id,:role_id => user.role_id}%>
			<%=link_to image_tag('users/delete.png',:title => 'Удалить'),{:action => 'delete',:id => user.id,:role_id => user.role_id}%>
			
		</td>
	</tr>
		<%end%>
</table>

<% content_for :paginator do %>
	  	<%= will_paginate @users %>  
<% end %>











