<%form_for(:user,{:action => 'edit',:id => @user.id}) do |b|%>
	<table>
		<tr>
			<th><%= b.label :password,'Настоящий пароль'%></th>
			<td><%= b.password_field :password,:size => 30%></td>
		</tr>
		<tr>
			<th><%= b.label :password,'Новый пароль'%></th>
			<td><%= b.password_field :password,:size => 30%></td>
		</tr>
		<tr>
			<th><%= b.label :password_confirmation,'Подтверждение нового пароля'%></th>
			<td><%= b.password_field :password_confirmation,:size => 30%></td>
		</tr>			
		
	</table>
	<div>
		<tr>
			
			<td><%= submit_tag 'Изменить пароль'%></td>
		</tr>
	</div>
<%end%>
	
	
